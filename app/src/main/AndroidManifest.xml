<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nova.hackathon.camera">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-feature android:name="android.hardware.camera" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.geo.API_KEY"
                    android:value="@string/google_maps_key"/>
        <activity
            android:name="com.nova.hackathon.camera.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nova.hackathon.camera.NoCameraActivity"
            android:label="@string/title_activity_no_camera"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.nova.hackathon.camera.GalleryActivity" />
        <activity android:name="com.nova.hackathon.camera.AboutButterflies"/>
        <activity android:name="com.nova.hackathon.camera.ImageViewerActivity"/>
        <activity android:name=".MapsActivity"/>

    </application>

</manifest>
